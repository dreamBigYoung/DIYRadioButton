<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="DeviceRadioButton">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@drawable/ih_airconditioner_tvcolor_selector</item>
        <item name="android:background">@drawable/ih_device_bg_selector</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:gravity">center</item>
        <item name="android:button">@null</item>
    </style>
    <style name="layout_lamp_item">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">53dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">#fffefe</item>
        <item name="android:orientation">horizontal</item>
    </style>
    <style name="text_lamp_item">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">2</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:gravity">right|center_vertical</item>
        <item name="android:textColor">#e6000000</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="radiogroup_lamp_op">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">5</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:orientation">horizontal</item>
    </style>
</resources>
